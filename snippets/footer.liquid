{% assign adCount = 0 %}
{% assign footerPromos = "footer-promo-1|footer-promo-2|footer-promo-3" | split: "|" %}
{% for ad in footerPromos %}
  {% capture enabled %}{{ad}}{% endcapture %}
  {% if settings[enabled] %}
    {% assign adCount = adCount | plus: 1 %}
  {% endif %}
{% endfor %}

<div class="main-footer-wrapper">
 
  <footer class="main-footer">

    {% if adCount > 0 %}
      <div class="footer-promos showing-{{adCount}}-ads">
        {% for ad in footerPromos %}

          {% capture enabled %}{{ad}}{% endcapture %}
          {% capture url %}{{ad}}-url{% endcapture %}

          {% if settings[enabled] %}
            <div class="footer-promo">
              <a href="{{settings[url]}}">
                <img alt="" src="{{ ad | append:'.png' | asset_url }}">
              </a>
            </div>
          {% endif %}

        {% endfor %}
      </div>
    {% endif %}
    
    {% if settings.footer-modules-order != blank %}
      {% assign modules = settings.footer-modules-order | split: "-" %}

      {% assign modulesCount = modules.size %}
      {% if modulesCount > 3 %}
        {% assign modulesCount = 3 %}
      {% endif %}

      <div class="footer-modules showing-{{ modulesCount }}-modules">

        {% for module in modules limit: 3 %}

          {% case module %}
            {% when 'A' %}
              {% include 'footer-link-lists' %}
            {% when 'B' %}
              {% include 'footer-text-box' %}
            {% when 'C' %}
              {% include 'footer-tweet' %}
            {% when 'D' %}
              {% include 'footer-instagram' %}
            {% when 'E' %}
              {% include 'footer-connect' %}
        	{% when 'F' %}
              {% include 'footer-facebook' %}
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
    
    <div class="social-networks">
      {% if settings.footer-titles %}
      <h4>{{ 'layout.footer.social_icons_title' | t }}</h4>
      {% endif %}

      <ul>
        {% if settings.social-facebook-url != blank %}
        <li class="social-link facebook"><a href="{{ settings.social-facebook-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-twitter-url != blank %}
        <li class="social-link twitter"><a href="{{ settings.social-twitter-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-tumblr-url != blank %}
        <li class="social-link tumblr"><a href="{{ settings.social-tumblr-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-google-url != blank %}
        <li class="social-link google-plus"><a href="{{ settings.social-google-plus-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-pinterest-url != blank %}
        <li class="social-link pinterest"><a href="{{ settings.social-pinterest-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-instagram-url != blank %}
        <li class="social-link instagram"><a href="{{ settings.social-instagram-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-kickstarter-url != blank %}
        <li class="social-link kickstarter"><a href="{{ settings.social-kickstarter-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-vimeo-url != blank %}
        <li class="social-link vimeo"><a href="{{ settings.social-vimeo-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-youtube-url != blank %}
        <li class="social-link youtube-logo"><a href="{{ settings.social-youtube-url }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-email-address != blank %}
        <li class="social-link email"><a href="mailto:{{ settings.social-email-address }}" target="_blank"></a></li>
        {% endif %}
        {% if settings.social-rss-url != blank %}
        <li class="social-link rss"><a href="{{ settings.social-rss-url }}" target="_blank"></a></li>
        {% endif %}
      </ul>
    </div>
    
  </footer>
  
  <div class="page-bottom" style="background: #DEDEDE;-webkit-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.3);-moz-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.3);box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.3);">
	<div class="bottom-flow wow bounceInLeft" style="text-align: center; padding: 30px 0px 30px 0px;">
      <a href="/collections/vendors?q=Bob Long">
        <img src="{{ 'bob_long.png' | asset_url }}" title="Browse Bob Long Products" alt="Bob Long" style="width: 148; text-align: center; border: 0;" class="brandlogofeat wow pulse" data-wow-delay="1s"/>
      </a>
      <a href="/collections/vendors?q=Planet Eclipse">
        <img src="{{ 'planet_eclipse.png' | asset_url }}" title="Browse Planet Eclipse Products" alt="Planet Eclipse" style="width: 148; text-align: center; border: 0;" class="brandlogofeat wow pulse" data-wow-delay="1.125s"/>
      </a>
      <a href="/collections/vendors?q=Empire">
